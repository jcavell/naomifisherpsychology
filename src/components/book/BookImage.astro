---
import { Picture } from "astro:assets";

import aDifferentWayToLearnImage from "../../images/books/a-different-way-to-learn.jpg";
import changingOurMindsImage from "../../images/books/changing-our-minds.jpg";
import whenTheNaughtyStepsImage from "../../images/books/when-the-naughty-step-makes-things-worse.jpg";
import psychologyOfMentalHealthImage from "../../images/books/psychology-of-mental-health.jpg";
import teenagersGuideToBurnoutImage from "../../images/books/the-teenagers-guide-to-burnout.jpg";

const { book } = Astro.props;

const id2Image = {
  1: changingOurMindsImage,
  2: aDifferentWayToLearnImage,
  3: psychologyOfMentalHealthImage,
  4: whenTheNaughtyStepsImage,
  5: teenagersGuideToBurnoutImage,
};

const image = id2Image[book.id];
---
  <Picture
    src={image}
    widths={[240, 540, 720, image.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${image.width}px`}
    alt={`${book.title}`}
    pictureAttributes={{}}
  />
